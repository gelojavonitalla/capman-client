{{application-content-header model=model.header}}

<!-- Main content -->
<section class="content">

  <!-- Info boxes -->
  <div class="row">
    {{#each model.informations as |info| }}
      <!-- Classes is expecting 3 items-->
      <div class="col-md-4 col-xs-12">
        {{info-box model=info}}
      </div>
    {{/each}}
  </div>
  <!-- /.row -->

  <!-- Capacity-->
  <div class="row">

    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Capacity</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                class="fa fa-minus"></i>
            </button>
          </div>
        </div>
        <!-- /.box-header -->

        <div class="box-body">
          <div class="row">
            <!-- Daily capacity for each offices -->
            {{#each model.capacities as |capacity| }}
              <div class="col-md-6">
                {{progress-group model=capacity}}
              </div>
              <!-- /.col -->
            {{/each}}
          </div>
          <!-- /.row -->
        </div>
        <!-- ./box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>
<!-- /.content -->



