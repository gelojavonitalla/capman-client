{{application-content-header model=model.header}}

<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- Main Panel -->
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Info</h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="pid">PID #</label>
                    <input type="text" class="form-control" id="pid" placeholder="Enter PID #" value="P123456778">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="Client Address"
                           value="Stanford, CA">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="scope">Scope</label>
                <input type="text" class="form-control" id="address" placeholder="Project Scope"
                       value="Please conduct full audit.">
              </div>
              <div class="form-group">
                <label>
                  <input type="checkbox"> Is Revision?
                </label>
              </div>
              <div class="form-group">
                <label for="project-files">Project Files and Information:</label>
                <input type="text" class="form-control" id="project-files" placeholder="Files Information"
                       value="FTP Path: Z:\FTP Files\ProViewStudio\Studio South Bay\Stanford - Industry Courtyard\160422_For Proview">
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Details</h3>
              <div class="pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                  <i class="fa fa-minus"></i></button>
              </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body pad">
              <form>
                {{wysig-editor}}
              </form>
            </div>
            <!--/.box-body -->
          </div>
          <!--/.box -->
        </div>
      </div>
    </div>
    <!-- ./col-->

    <!-- Right Panels -->
    <div class="col-md-4">

      <!-- People -->
      <div class="row">
        <div class="col-md-12">
          <div class="box box-solid">
            <div class="box-header with-border">
              <h3 class="box-title">People</h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
              </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body form-horizontal">
              <div class="form-group row">
                <label class="col-md-3 control-label" for="assignee">Assignee</label>
                <div class="col-md-9"><input type="text" class="form-control" id="assignee"
                                             placeholder="Enter User assigned to this Project"
                                             value="Wenthel Javonitalla"></div>
              </div>
              <div class="form-group row">
                <label class="col-md-3 control-label">Updated</label>
                <p class="col-md-9 form-control-static">Leslie Pearson</p>
              </div>
              <div class="form-group row">
                <label class="col-md-3 control-label">Created</label>
                <p class="col-md-9 form-control-static">Leslie Pearson</p>
              </div>
            </div>

          </div>
        </div>
      </div>

      <!-- Dates-->
      <div class="row">
        <div class="col-md-12">
          <div class="box box-solid">
            <div class="box-header with-border">
              <h3 class="box-title">Dates</h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
              </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body form-horizontal">

              <div class="form-group row">
                <label class="col-md-3 control-label" for="pid">Due</label>
                <div class="col-md-9"><input type="text" class="form-control" id="pid" placeholder="Project Due Date"
                                             value="May 03, 2016"></div>
              </div>
              <div class="form-group row">
                <label class="col-md-3 control-label">Updated</label>
                <p class="col-md-9 form-control-static">May, 01, 2016</p>
              </div>
              <div class="form-group row">
                <label class="col-md-3 control-label">Created</label>
                <p class="col-md-9 form-control-static">May, 01, 2016</p>
              </div>
            </div>
            <!-- /.box-body -->

          </div>
          <!-- /.box -->
        </div>
      </div>
    </div>
    <!-- ./col-->

  </div>
  <!-- ./row-->


</section>