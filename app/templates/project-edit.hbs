{{application-content-header model=model.header}}

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <!-- Information -->
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
            <div class="box-header">
              <h3 class="box-title"><i class="icon ion ion-easel"></i>Project Information</h3>
              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse"><i class="fa fa-minus"></i>
                </button>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="pid">PID #</label>
                    <input type="text" class="form-control" id="pid" placeholder="Enter PID #" value="P123456778">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="pid">Client</label>
                    <input type="text" class="form-control" id="client" placeholder="Client" value="Standford">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" placeholder="Client Address"
                       value="Stanford, CA">
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="assignee">Assignee</label>
                    <input type="text" class="form-control" id="assignee"
                           placeholder="Enter User assigned to this Project"
                           value="Wenthel Javonitalla">
                  </div>
                </div>
                <div class="col-md-6">
                  {{date-range-picker title="Due Date" fieldId="dateRange"}}
                </div>
              </div>
              <div class="form-group">
                <label>
                  <input type="checkbox"/> Revision
                </label>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
      <!-- /.row-->

      <!-- Scope and Deliverables -->
      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title"><i class="icon fa fa-truck"></i>Scope & Deliverables</h3>
              <div class="pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                  <i class="fa fa-minus"></i></button>
              </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body pad">
              <form>
                {{wysig-editor title="Scope" fieldId="scope" placeHolder="Project scope"}}

                {{wysig-editor title="Deliverables" fieldId="deliverables" placeHolder="Provide more details for the deliverables"}}
              </form>
            </div>
            <!--/.box-body -->
          </div>
          <!--/.box -->
        </div>
      </div>
      <!-- /.row-->

    </div>
    <!-- ./col-->

  </div>
  <!-- ./row-->


</section>